<?xml version="1.0" encoding="UTF-8" ?>
<widget xmlns   = "http://www.w3.org/ns/widgets"
    xmlns:gap   = "http://phonegap.com/ns/1.0"
    id          = "com.arappz.ysld"
    versionCode = "10"
    version     = "1.0.0" >

<!-- versionCode is optional and Android only -->

  <name>القاموس الاشاري اليمني بيتا</name>

  <description>
      قاموس مصور للغة الإشارة اليمنية.
  </description>

  <author href="https://build.phonegap.com" email="eng-khalid@outlook.com">
      Khalid Dhafir
  </author>
  <platform name="android" >
    <preference name="android-minSdkVersion" value="16"/>
    <preference name="android-targetSdkVersion" value="28"/>
</platform>

  <gap:plugin name="cordova-plugin-geolocation" source="npm" />
  <gap:plugin name="cordova-plugin-whitelist" version="1.1.0" source="npm" />
   
  
  <access origin="*" />
  <allow-navigation href="*" />
  <allow-intent href="http://*/*" />
  <allow-intent href="https://*/*" />

  <icon platform="android" src="package-assets/48.png" density="mdpi" width="48" height="48"/>
  <icon platform="android" src="package-assets/72.png" density="hdpi" width="72" height="72"/>
  <icon platform="android" src="package-assets/96.png" density="xhdpi" width="96" height="96"/>
  
</widget>
